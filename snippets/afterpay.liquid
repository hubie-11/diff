<style class="afterpay-styles">
  button#logo-link {
    display: none;
  }

  .form__payment-placements {
    margin-bottom: 1rem;
  }

  .afterpay-paragraph {
    text-transform: none;
    font-size: 16px !important;
  }

  .klarna-wrapper img {
    margin-bottom: 0;
    vertical-align: unset;
  }

  @media screen and (max-width: 1024px) {
    .afterpay-paragraph {
      font-size: 12px !important;
    }
    .afterpay-logo.compact-badge,
    .afterpay-logo.compact-badge svg {
      width: 80px;
    }

    .klarna-wrapper img {
      height: 10px;
    }
  }
</style>

<style class="afterpay-mini-cart-styles">
  .afterpay-paragraph {
    font-size: 13px;
  }

  .afterpay-logo.compact-badge,
  .afterpay-logo.compact-badge svg {
    width: 80px;
  }

  button#logo-link {
    display: none;
  }

  .klarna-wrapper img {
    height: 10px;
  }
  @media screen and (max-width: 450px) {
    .afterpay-paragraph {
      font-size: 11px;
    }
  }
</style>
