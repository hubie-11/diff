<div class="form form--contact form--default">
	{% form 'contact' %}
		{%- assign attr_name = 'contact.form.name' | t | handle -%}
		{%- assign attr_phone = 'contact.form.phone' | t | handle -%}

		<div class="form__head">
				<h2 class="form__title">
					{{- page.title -}}
				</h2><!-- /.form__title -->

				<div class="form__description">
					{{- page.content -}}
				</div><!-- /.form__description -->
		</div><!-- /.form__head -->

		{%- if form.errors -%}
			<div class="form__message form__message--error">
				{{- form.errors | default_errors -}}
			</div><!-- /.form-notice -->
		{%- endif -%}

		{%- if form.posted_successfully? -%}
			<div class="form__message form__message--success">
				{{- 'contact.form.post_success' | t -}}
			</div><!-- /.form-alert -->
		{%- endif -%}

		<div class="form__body">
			<div class="form__row">
				<label for="field-contact-name" class="form__label">{{ 'contact.form.name' | t }}</label>

				<input type="text" id="field-contact-name" class="field" name="contact[{{ attr_name }}]" placeholder="{{ 'contact.form.name' | t }}" autocapitalize="words" value="{{ customer.name | default: form[attr_name] }}">
			</div><!-- /.form__row -->

			<div class="form__row">
				<label for="field-contact-email" class="form__label">{{ 'contact.form.email' | t }}</label>

				<input type="email" id="field-contact-email" class="field" name="contact[email]" placeholder="{{ 'contact.form.email' | t }}" autocorrect="off" autocapitalize="off" value="{{ customer.email | default: form.email }}" required>
			</div><!-- /.form__row -->

			<div class="form__row">
				<label for="field-contact-phone" class="form__label">{{ 'contact.form.phone' | t }}</label>

				<input type="tel" id="field-contact-phone" class="field" name="contact[{{ attr_phone }}]" placeholder="{{ 'contact.form.phone' | t }}" pattern="[0-9\-]*" value="{{ customer.phone | default: form[attr_phone] }}">
			</div><!-- /.form__row -->

			<div class="form__row">
				<label for="field-contact-message" class="form__label">{{ 'contact.form.message' | t }}</label>

				<textarea rows="10" id="field-contact-message" class="field" name="contact[body]" placeholder="{{ 'contact.form.message' | t }}" required>{{ form.body }}</textarea>
			</div><!-- /.form-row -->
		</div><!-- /.form__body -->

		<div class="form__actions clear">
			<button type="submit" class="form__btn btn btn--form">
				{{- 'contact.form.submit' | t -}}
			</button>
		</div><!-- /.form-actions -->
{% endform %}
</div><!-- /.form -->
