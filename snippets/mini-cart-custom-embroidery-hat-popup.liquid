<div class="popup-embroidery-container" id="popup-embroidery-hat">
    <div class="popup-container-inner">
        <div class="popup-embroidery">
            <a href="#popup-embroidery-hat" class="js-close-embroidery-popup active" data-js-embroidery-hat-popup-close>×</a>
            <h3>{{ line_item.product.title }}</h3>
            <div data-js-embroidery-hat>
                <div class="c-embroidery-popup__preview-container">
                {% if line_item.product.metafields.embroidery.image %}
                    <img
                            class="c-engraving__image"
                            src="{{ line_item.product.metafields.embroidery.image[0].src }}"
                            alt="{{ line_item.product.title }} — embroidery area"
                    />
                {% endif %}

                {% if line_item.product.metafields.embroidery.is_a_crown_hat %}
                    <div class="c-embroidery-popup__preview crown-hat" data-js-embroidery-preview>
                        <svg viewBox="0 0 500 500" width="400" height="400" style="transform: rotate(354deg);">
                            <defs>
                                <path id="curve_preview"
                                      d="
        M 0, 140
        m -37, 10
        a 197,17 10 1,0 244,0"/>
                            </defs>
                            <text style="fill:{{ line_item.product.metafields.embroidery.colors[0] }};" text-anchor="middle" class="c-embroidery-font__preview--font-circular">
                                <textPath xlink:href="#curve_preview" startOffset="50%">
                                </textPath>
                            </text>
                        </svg>
                    </div>
                {% else %}
                    <div class="c-embroidery-popup__preview" data-js-embroidery-preview>
                        <svg viewBox="0 0 500 300">
                            <path id="curve_preview" d="M 113 214 C 113 185 115 154 121 126 C 149 60 240 60 248 60 C 372 61 375 107 380 130 C 385 157 386 185 386 211" fill="transparent" />
                            <text style="fill:{{ line_item.product.metafields.embroidery.colors[0] }};" width="380"  x="0" y="0" text-anchor="middle" class="c-embroidery-font__preview--font-circular">
                                <textPath xlink:href="#curve_preview" startOffset="50%">
                                </textPath>
                            </text>
                        </svg>
                    </div>
                {% endif %}
                </div>
                <div class="c-embroidery__form">
                    <h4>MONOGRAM ($10)</h4>
                    <div class="custom-text">
                        <div class="title">1. ADD TEXT:</div>
                        <label for="customTextPopup">
                            <input id="customTextPopup" type="text" minlength="{{ line_item.product.metafields.embroidery.min_characters | default: 1 }}" maxlength="{{ line_item.product.metafields.embroidery.characters | default: 10 }}" name="properties[custom_text]" required>
                        </label>
                        <small>({{ line_item.product.metafields.embroidery.characters | default: 10 }} characters - NO SPECIAL CHARACTERS)</small>
                    </div>
                    <div class="custom-color">
                        <div class="title">2. CHOOSE COLOR:</div>
                        <div class="custom-color-selector">
                            {% for color in line_item.product.metafields.embroidery.colors %}
                                {% assign color_name = line_item.product.metafields.embroidery.color_names[forloop.index0] | upcase %}
                                <input id="customColorPopup{{ forloop.index }}" type="radio" value="{{ color_name }}" name="properties[custom_color]" {% if forloop.first == true %}checked{% endif %} data-color="{{ color }}">
                                <label for="customColorPopup{{ forloop.index }}">
                                    <div class="white" style="background: {{ color }};"></div>
                                </label>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="custom-style">
                        <div class="title">3. CHOOSE STYLE:</div>
                        <div class="custom-style-selector">
                            <input id="customStyleWhitePopup" type="radio" value="BLOCK" name="properties[custom_style]" data-font="c-embroidery-font__preview--font-circular" checked>
                            <label for="customStyleWhitePopup">
                                <div class="white c-embroidery-font__preview--font-circular">BLOCK</div>
                            </label>
                            <input id="customStyleBluePopup" type="radio" value="SCRIPT" name="properties[custom_style]" data-font="c-embroidery-font__preview--font-shell">
                            <label for="customStyleBluePopup">
                                <div class="blue c-embroidery-font__preview--font-shell">SCRIPT</div>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div data-js-embroidery-hat-left>
                <div class="c-embroidery-popup__preview-container">
                    {% if line_item.product.metafields.embroidery_hat_left.image %}
                        <img
                                class="c-engraving__image"
                                src="{{ line_item.product.metafields.embroidery_hat_left.image[0].src }}"
                                alt="{{ line_item.product.title }} — embroidery area"
                        />
                    {% endif %}

                    <div class="c-embroidery-popup__preview" data-js-embroidery-hat-left-preview>
                        <div class="c-embroidery-font__preview--font-circular">
                            <div class="c-embroidery__preview_text"></div>
                        </div>
                    </div>
                </div>
                <div class="c-embroidery__form">
                    <h4>MONOGRAM THE LEFT SIDE ($10)</h4>
                    <div class="custom-text">
                        <div class="title">1. ADD TEXT:</div>
                        <label for="customTextLeftPopup">
                            <input id="customTextLeftPopup" type="text" minlength="{{ line_item.product.metafields.embroidery_hat_left.min_characters | default: 1 }}" maxlength="{{ line_item.product.metafields.embroidery_hat_left.characters | default: 3 }}" name="properties[custom_hat_left_text]" required>
                        </label>
                        <small>({{ line_item.product.metafields.embroidery_hat_left.characters | default: 3 }} characters - NO SPECIAL CHARACTERS)</small>
                    </div>
                    <div class="custom-color">
                        <div class="title">2. CHOOSE COLOR:</div>
                        <div class="custom-color-selector">
                            {% for color in line_item.product.metafields.embroidery_hat_left.colors %}
                                {% assign color_name = line_item.product.metafields.embroidery_hat_left.color_names[forloop.index0] | upcase %}
                                <input id="customHatColorLeftPopup{{ forloop.index }}" type="radio" value="{{ color_name }}" name="properties[custom_hat_left_color]" {% if forloop.first == true %}checked{% endif %} data-color="{{ color }}">
                                <label for="customHatColorLeftPopup{{ forloop.index }}">
                                    <div class="white" style="background: {{ color }};"></div>
                                </label>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="custom-style">
                        <div class="title">3. CHOOSE STYLE:</div>
                        <div class="custom-style-selector">
                            <input id="customStyleLeftWhitePopup" type="radio" value="BLOCK" name="properties[custom_hat_left_style]" data-font="c-embroidery-font__preview--font-circular" checked>
                            <label for="customStyleLeftWhitePopup">
                                <div class="white c-embroidery-font__preview--font-circular">BLOCK</div>
                            </label>
                            <input id="customStyleLeftBluePopup" type="radio" value="SCRIPT" name="properties[custom_hat_left_style]" data-font="c-embroidery-font__preview--font-shell">
                            <label for="customStyleLeftBluePopup">
                                <div class="blue c-embroidery-font__preview--font-shell">SCRIPT</div>
                            </label>
                            <input id="customStyleLeftBlackPopup" type="radio" value="MONOGRAM" name="properties[custom_hat_left_style]" data-font="c-embroidery-font__preview--font-shell">
                            <label for="customStyleLeftBlackPopup">
                                <div class="black c-embroidery-font__preview--font-shell"><span class="normal-txt">MONOGRAM</span><br><span class="script">SCRIPT</span></div>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div data-js-embroidery-hat-right>
                <div class="c-embroidery-popup__preview-container">
                    {% if line_item.product.metafields.embroidery_hat_right.image %}
                        <img
                                class="c-engraving__image"
                                src="{{ line_item.product.metafields.embroidery_hat_right.image[0].src }}"
                                alt="{{ line_item.product.title }} — embroidery area"
                        />
                    {% endif %}

                    <div class="c-embroidery-popup__preview" data-js-embroidery-hat-right-preview>
                        <div class="c-embroidery-font__preview--font-circular">
                            <div class="c-embroidery__preview_text"></div>
                        </div>
                    </div>
                </div>
                <div class="c-embroidery__form">
                    <h4>MONOGRAM THE RIGHT SIDE ($10)</h4>
                    <div class="custom-text">
                        <div class="title">1. ADD TEXT:</div>
                        <label for="customTextRightPopup">
                            <input id="customTextRightPopup" type="text" minlength="{{ line_item.product.metafields.embroidery_hat_right.min_characters | default: 1 }}" maxlength="{{ line_item.product.metafields.embroidery_hat_right.characters | default: 3 }}" name="properties[custom_hat_right_text]" required>
                        </label>
                        <small>({{ line_item.product.metafields.embroidery_hat_right.characters | default: 3 }} characters - NO SPECIAL CHARACTERS)</small>
                    </div>
                    <div class="custom-color">
                        <div class="title">2. CHOOSE COLOR:</div>
                        <div class="custom-color-selector">
                            {% for color in line_item.product.metafields.embroidery_hat_right.colors %}
                                {% assign color_name = line_item.product.metafields.embroidery_hat_right.color_names[forloop.index0] | upcase %}
                                <input id="customHatColorRightPopup{{ forloop.index }}" type="radio" value="{{ color_name }}" name="properties[custom_hat_right_color]" {% if forloop.first == true %}checked{% endif %} data-color="{{ color }}">
                                <label for="customHatColorRightPopup{{ forloop.index }}">
                                    <div class="white" style="background: {{ color }};"></div>
                                </label>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="custom-style">
                        <div class="title">3. CHOOSE STYLE:</div>
                        <div class="custom-style-selector">
                            <input id="customStyleRightWhitePopup" type="radio" value="BLOCK" name="properties[custom_hat_right_style]" data-font="c-embroidery-font__preview--font-circular" checked>
                            <label for="customStyleRightWhitePopup">
                                <div class="white c-embroidery-font__preview--font-circular">BLOCK</div>
                            </label>
                            <input id="customStyleRightBluePopup" type="radio" value="SCRIPT" name="properties[custom_hat_right_style]" data-font="c-embroidery-font__preview--font-shell">
                            <label for="customStyleRightBluePopup">
                                <div class="blue c-embroidery-font__preview--font-shell">SCRIPT</div>
                            </label>
                            <input id="customStyleRightBlackPopup" type="radio" value="MONOGRAM" name="properties[custom_hat_right_style]" data-font="c-embroidery-font__preview--font-shell">
                            <label for="customStyleRightBlackPopup">
                                <div class="black c-embroidery-font__preview--font-shell"><span class="normal-txt">MONOGRAM</span><br><span class="script">SCRIPT</span></div>
                            </label>
                        </div>
                    </div>
                    <button type="button" name="custom-add" class="custom-add-btn" data-id="{{ line_item_number }}">Save</button>
                </div>
            </div>
        </div><!-- /.popup -->
    </div><!-- /.popup-container-inner -->
</div><!-- /.popup-container -->
